.news-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.news-list {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
}

.avatar_img {
  width: 160rpx;
  height: 160rpx;
}

.item-content {
  display: flex;
  flex-direction: column;
  
  align-content: space-between; 
  flex: 1;
  padding-left: 15rpx;
}

.item-content .tit-1 {
  font-size: 15px;
  color: #333;
}

.item-content .tit-2 {
  font-size: 12px;
  color: #999;
}
